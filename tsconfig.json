{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
